<h1>Edit Shoe!</h1>

<form class="" action="/shoes/<%= @shoe.id %>" method="post">
<input type="hidden" name="_method" value="patch">
<label for="title">Title:</label>
<input type="text" name="title" value="<%= @shoe.title %>">
<label for="title">Description:</label>
<input type="text" name="description" value="<%= @shoe.description %>">
<label for="title">Image Url:</label>
<input type="text" name="image_url" value="<%= @shoe.image_url %>">
<input type="submit" name="" value="Edit Post">
</form> 